<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" %><%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %><input type="hidden" id="columnId" value="${columnId}"/><h4 class="widget-title lighter smaller">图片相关信息</h4><style type="text/css">    .ul {        margin-left: 1px;        margin-bottom: 1px;        padding-left: 0;    }    .ul .li {        margin-left: 1px;        list-style: none;        display: inline-block;    }    .ul .li .img {        /*border:1px solid white;*/        height: 170px;    }    .wrap {        border: 2px dashed grey;    }    .delBtn {        z-index: 999;        position: absolute;        color: #ffffff;        cursor: pointer    }</style><div class="col-lg-12">    <div class="wrap">        <div style="margin: 10px;">            <ul class="ul">                <c:forEach items="${pictures}" var="images">                    <li class="li">                        <div class="delBtn">                            &nbsp;<i title="删除" class="ace-icon fa fa-trash-o bigger-130"                                     onclick="delImage('${images.sourceRelId}')"></i>                        </div>                        <img class="img" src="${images.url}?imageMogr2/thumbnail/x170" title="${images.name}"/>                        <input type="hidden" name="imageId" value="${images.pictureId}"/>                        <p>							<select name="businessType">							  <option value ="1" <c:if test="${images.businessType==1}">selected = "selected"</c:if> > 封面</option>							  <option value ="2" <c:if test="${images.businessType==2}">selected = "selected"</c:if> > 背景</option>							</select>                        	<%--                             <input id="logo${images.sourceRelId}" type="checkbox" name="type" value="1"/> --%><%--                             <label for="logo${images.sourceRelId}">封面</label> --%><%--                             <input id="bg${images.sourceRelId}" type="checkbox" name="type" value="2"/> --%><%--                             <label for="bg${images.sourceRelId}">背景</label> --%>                        </p>                    </li>                </c:forEach>                <div id="noImage" hidden="true"></div>            </ul>            <button id="continueAdd" class="btn btn-white btn-round">                <i class="glyphicon glyphicon-ok"></i>                添加            </button>        </div>    </div></div><script type="text/javascript">    jQuery(function ($) {        $("#continueAdd").on('click', function () {//            var url = contextPath + '/sourceManage/source/pictureSelect/2/?name=' + $("#name").val();            var url = contextPath + '/sourceManage/picture/select';            showSelectDlg("选择图片", url, ["Select_table-data"], selectPicturesCallBack, BootstrapDialog.SIZE_WIDE);        });        function selectPicturesCallBack(obj) {            //将已添加的图片信息追加展示至页面            $.each(obj, function (index, value) {                var tempId = parseInt(10000000000000000000 * Math.random());                var html =                    '<li class="li">' +                    '<div class=\'delBtn\'>' +                    '&nbsp;<i title=\'删除\' class=\'ace-icon fa fa-trash-o bigger-130\'' +                    'onclick="delImage()"></i>' +                    '</div>' +                    '<img class="img" src="' + value.url + '?imageMogr2/thumbnail/x170" title="' + value.name + '"/>' +                    '<input type="hidden" name="imageId" value="' + value.id + '"/>' +                    '<p>' +					'<select name="businessType">' +					  '<option value ="1"> 封面</option>' +					  '<option value ="2"> 背景</option>' +					'</select>' +                      '</p>' +                    '</li>';                $("#noImage").before(html);            });        }    })    function delImage(sourceRelId) {        alert(sourceRelId);    }</script>